<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rezaharis.githubfavorites">

    <uses-permission android:name="com.rezaharis.githubuserapp2.READ_DATABASE" />
    <uses-permission android:name="com.rezaharis.githubuserapp2.WRITE_DATABASE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GitHubUserApp2">
        <activity android:name=".ui.view.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.view.activity.UserDetail" />
        <activity android:name=".ui.view.activity.SplashActivity" />
    </application>

    <queries>
        <package android:name="com.rezaharis.githubuserapp2" />
    </queries>

</manifest>